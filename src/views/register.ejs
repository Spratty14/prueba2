<!DOCTYPE html>
<html lang="en">

<head>
    <%- include ('partials/head.ejs')%>
    <%- include ('partials/header.ejs')%>
</head>

<body class="bg-dark">

    <div class="container">
        <div class="row">
            <div class="offset-md-3"></div>
            <div class="col-md-6 mt-5">
                <form action="/register" class="bg-light rounded p-3" method="post">
                    <div class="form-group">
                        <label>Username:</label>
                        <input type="text" class="form-control" name="username" aria-describedby="helpId"
                            placeholder="Insert Username">
                        <small id="helpId" class="form-text text-muted">Help text</small>
                    </div>
                    <div class="form-group">
                        <label>Email:</label>
                        <input type="email" class="form-control" name="email" aria-describedby="emailHelpId"
                            placeholder="Insert email">
                        <small id="emailHelpId" class="form-text text-muted">Password must be 3 to 18 characters</small>
                    </div>
                    <div class="form-group">
                        <label>Password:</label>
                        <input type="password" class="form-control" name="password" placeholder="Insert password">
                        <small id="emailHelpId" class="form-text text-muted">Password must be 3 to 18 characters</small>
                    </div>
                    <div class="form-group">
                        <button type="submit" class="btn btn-primary btn-block">Register</button>
                    </div>
                </form>
            </div>
        </div>
    </div>

    <%- include ('partials/footer.ejs')%>
</body>

</html>