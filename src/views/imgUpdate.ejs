<!doctype html>
<html lang="en">

<head>
    <title>upload</title>
    <%- include ('partials/head.ejs')%>
</head>

<body class="bg-dark">
    <%- include ('partials/header.ejs')%>

    <div class="container">
        <div class="row">
            <div class="offset-md-3"></div>
            <div class="col-md-6 bg-light mt-5 p-4 rounded">
                <form action="/edit/<%= image._id%>" method="post" enctype="multipart/form-data">
                    <div class="form-group">
                        <label>Upload image</label>
                        <input type="file" name="image" class="form-control-file" placeholder="Browse"
                            aria-describedby="fileHelpId">
                    </div>
                    <div class="form-group">
                        <label for="">Titulo</label>
                        <input type="text" class="form-control" name="title" aria-describedby="helpId"
                            placeholder="Inserte titulo">
                    </div>
                    <div class="form-group">
                        <label>Descripcion</label>
                        <textarea class="form-control" name="description" rows="10"><%= image.description%></textarea>
                    </div>
                    <div class="form-group">
                        <label>Examples</label>
                        <textarea class="form-control" name="examples" rows="5"><%= image.example%></textarea>
                    </div>
                    <div class="form-group">
                        <label>Nivel:</label>
                        <select multiple class="form-control" name="level">
                            <option>N3</option>
                            <option>N4</option>
                            <option>N5</option>
                        </select>
                    </div>
                    <div class="form-group">
                        <button type="submit" class="btn btn-primary btn-lg btn-block">Submit</button>
                    </div>
                </form>
            </div>
        </div>
    </div>

    <%- include ('partials/footer.ejs')%>
</body>

</html>